<% layout("layout/boilerplate") %>

<div class="container-fluid">
    <div class="offset-3">
        <h1>Updating a students info</h1>
        <form action="/students/<%= batch %>/<%= dept %>/allstudentslist/<%= student._id %>?_method=PUT"
            class="g-3 mt-4" method="post">

            <div class="row mb-4">
                <div class="col-md-8 col-12">
                    <label for="name" class="form-label">Students Name:</label>
                    <input type="text" class="form-control" name="name" id="name" placeholder="name"
                        value="<%= student.name %>" required>
                </div>
            </div>


            <div class="row mb-4">
                <div class="col-md-8 col-12">
                    <label for="id" class="form-label">Students ID:</label>
                    <input type="text" id="id" name="id" class="form-control" placeholder="id" value="<%= student.id %>"
                        required>
                </div>
            </div>


            <div class="row mb-4">
                <div class="form-group col-md-3 mb-4">
                    <label for="batch" class="form-label">Students Batch:</label>
                    <select name="batch" id="batch" class="form-select">
                        <% for(let b of allBatch){ %>
                        <option value="<%=b%>" <%=student.batch === b ? "selected" : ""%>>
                            <%=b%>
                        </option>
                        <% } %>
                    </select>
                </div>

                <div class="form-group col-md-5">
                    <label for="dept" class="form-label">Students Department:</label>
                    <select name="dept" id="dept" class="form-select">
                        <option>Open this select menu</option>
                        <% for(let d of allDept){ %>
                        <option value="<%= d %>" <%= student.dept === d ? "selected" : ""%>><%= d %></option>
                        <% } %>
                    </select>
                </div>
            </div>


            <div class="row mb-4">
                <div class="form-group col-md-4 mb-4">
                    <label for="level" class="form-label">Students level:</label>
                    <select name="level" id="level" class="form-select">
                        <% for(let l of level){ %>
                        <option value="<%=l%>" <%=student.level === l ? "selected" : ""%>>
                            <%=l%>
                        </option>
                        <% } %>
                    </select>
                </div>


                <div class="form-group col-md-4">
                    <label for="term" class="form-label col-md-6">Students term:</label>
                    <select name="term" id="term" class="form-select">
                        <% for(let t of term){ %>
                        <option value="<%=t%>" <%=student.term === t ? "selected" : ""%>>
                            <%=t%>
                        </option>
                        <% } %>
                    </select>
                </div>
            </div>


            <div class="row mb-4">
                <div class="col-md-8 col-12">
                    <label for="email" class="form-label">Students Email:</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="email"
                        value="<%= student.email %>" required>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-8 col-12">
                    <label for="address" class="form-label">Students Address:</label>
                    <input type="text" class="form-control" name="address" id="address" placeholder="address"
                        value="<%= student.address %>">
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-8 col-12">
                    <label for="phone" class="form-label">Students Phone No.</label>
                    <input type="text" class="form-control" name="phone" id="phone" placeholder="phone"
                        value="<%= student.phone %>" required>
                </div>
            </div>

            <button class="btn btn-info my-5">Submit</button>
        </form>
    </div>
</div>